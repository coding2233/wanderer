{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "auto-build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "${workspaceFolder}/auto.sh"
            ]
        },
        {
            "label": "build-server-unix",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DBUILD_EXEC=ON",
                "-DBUILD_SDK=OFF",
                "-DEXPLAINC=OFF",
                "-DWEBSERVER=OFF",
                "-DLUASCRIPT=ON",
                "-DCMAKE_POSITION_INDEPENDENT_CODE:BOOL=true",
                "-DCMAKE_BUILD_TYPE=Release",
                // "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/cmake/linux_clang.cmake",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ]
        },
        {
            "label": "build-server-exec",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "-j",
                "10"
            ],
            "dependsOn": [
                "build-server-unix"
            ]
        },
        {
            "label": "cmake-linux-sdk",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DBUILD_EXEC=OFF",
                "-DBUILD_SDK=ON",
                "-DEXPLAINC=OFF",
                "-DWEBSERVER=OFF",
                "-DLUASCRIPT=OFF",
                "-DCMAKE_POSITION_INDEPENDENT_CODE:BOOL=true",
                "-DCMAKE_BUILD_TYPE=Release",
                // "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/cmake/linux_clang.cmake",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ]
        },
        {
            "label": "build-linux-sdk",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "-j",
                "10"
            ],
            "dependsOn": [
                "cmake-linux-sdk"
            ]
        },
    ]
}